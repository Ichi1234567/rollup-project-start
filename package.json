{
  "name": "RollupStarter",
  "version": "0.0.1",
  "description": "project uses with rollup js",
  "scripts": {
    "type-check": "tsc --noEmit -p 'tsconfig.types.json'",
    "type-check:watch": "yarn type-check -- --watch",
    "prettier-check": "prettier --parser typescript 'src/**/*.{ts,tsx}' --write",
    "jest": "TZ=Asia/Taipei jest",
    "jest:ci": "TZ=Asia/Taipei jest --coverage",
    "build:types": "tsc --emitDeclarationOnly -p './tsconfig.types.json'",
    "build:js": "rollup -c",
    "build:watch": "rollup -c -w",
    "build": "NODE_ENV=production yarn build:js && yarn build:types"
  },
  "main": "dist/index",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.16",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-preset-minify": "^0.5.0",
    "husky": "^3.0.2",
    "jasmine-reporters": "^2.3.2",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "rollup": "^1.18.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "core-js": "^3.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier-check",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
